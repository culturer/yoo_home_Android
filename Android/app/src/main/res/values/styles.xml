<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 无顶部状态栏主题 -->
    <style name="FullScreenTheme" parent="AppTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--按钮水波纹效果-->
    <style name="ButtonStyle" parent="ThemeOverlay.AppCompat" />

    <!--pop进出动画-->
    <style name="pop_Anim">
        <item name="android:windowEnterAnimation">@animator/in_anim</item>
        <item name="android:windowExitAnimation">@animator/out_anim</item>
    </style>

    <style name="txt_pop_item_blue2black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/sel_text_blue2black</item>
        <item name="android:textSize">@dimen/txtsize16sp</item>

    </style>

</resources>
