<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.culturer.yoo_home.function.home.HomeFragment">

    <!--app:tabIndicatorColor="#fff"  // 下方滚动的下划线颜色-->
    <!--app:tabSelectedTextColor="#00aa00"  // tab被选中后，文字的颜色-->
    <!--app:tabTextColor="#fff"        // tab默认的文字颜色-->
    <android.support.design.widget.TabLayout
        android:id="@+id/home_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        app:tabIndicatorColor="@color/text_grey"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/text_grey" />
    <android.support.v4.view.ViewPager
        android:id="@+id/home_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
