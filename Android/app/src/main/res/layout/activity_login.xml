<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    tools:context="com.culturer.yoo_home.function.login.login.LoginActivity">


    <TextView
        android:id="@+id/login_largetitle"
        android:text="@string/login_large_title"
        android:textColor="@color/black"
        android:textSize="@dimen/large_title_textSize"
        android:padding="5dp"
        android:layout_marginTop="@dimen/large_title_top_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_littletitle"
        android:text="@string/App_Topic"
        android:textColor="@color/black"
        android:letterSpacing="0.1"
        android:textStyle="italic"
        android:textSize="@dimen/little_title_textSize"
        android:layout_marginTop="@dimen/little_title_top_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:text="123456"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:id="@+id/login_username"
        android:hint="账号"
        android:textStyle="italic"
        android:letterSpacing="0.1"
        android:ems="16"
        android:inputType="textPersonName"
        android:layout_marginTop="@dimen/content_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:text="123456"
        android:drawableLeft="@drawable/ic_password_black_24dp"
        android:drawablePadding="10dp"
        android:id="@+id/login_password"
        android:hint="密码"
        android:textStyle="italic"
        android:letterSpacing="0.1"
        android:ems="16"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/content_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/login_login"
        android:text="登     陆"
        android:layout_marginTop="@dimen/little_title_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login_register"
        android:text="注     册"
        android:layout_marginTop="@dimen/content_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_forget"
        android:layout_marginTop="@dimen/little_margin"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:text="忘记密码?"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
