<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/popwindow_background"
    android:padding="@dimen/text_margin"
    android:layout_margin="@dimen/content_top_margin">

    <TextView
        android:text="出游计划"
        android:gravity="center"
        android:id="@+id/homemain_activity_poptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/homemain_activity_poplist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!--预留分享接口-->
    <Button
        android:visibility="gone"
        android:id="@+id/homemain_activity_popshare"
        android:text="分享"
        android:textSize="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>