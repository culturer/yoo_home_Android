        <activity android:name="com.culturer.yoo_home.test.TestEmojiActivity" />
        <activity android:name="com.culturer.yoo_home.function.home.friends.homecircle_list.HomecircleListActivity" />

        <service
            android:name="com.culturer.yoo_home.service.IM.IMService"
            android:enabled="true"
            android:exported="true" />

