        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.culturer.yoo_home.function.login.login.LoginActivity"
            android:resizeableActivity="true"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.culturer.yoo_home.test.TestActivity" />
        <activity android:name="com.culturer.yoo_home.function.login.guide.GuideActivity" />
        <activity android:name="com.culturer.yoo_home.function.login.welcome.WelcomeActivity" />
        <activity
            android:name="com.culturer.yoo_home.function.main.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.culturer.yoo_home.function.login.register.RegisterActivity"
            android:resizeableActivity="true"
            android:theme="@style/FullScreenTheme" />
        <activity android:name="com.culturer.yoo_home.function.home.home_album.HomeAlbumActivity" />
        <activity android:name="com.culturer.yoo_home.function.home.home_arrangement.HomeArrangementActivity" />
