        <activity android:name="com.culturer.yoo_home.function.home.home_album_detail.HomeAlbumDetailActivity" />
        <activity android:name="com.culturer.yoo_home.function.chat.ChatActivity" />
        <!-- Mqtt Service -->
        <service android:name="org.eclipse.paho.android.service.MqttService" />
        <service android:name="com.culturer.yoo_home.service.MQTT.MQTTService" />

        <activity android:name="com.culturer.yoo_home.function.login.forget.ForgetActivity" />
        <activity
            android:name="com.culturer.yoo_home.function.login.load.LoadActivity"
            android:resizeableActivity="true"
            android:theme="@style/FullScreenTheme"
            tools:targetApi="n" />
        <activity android:name="com.culturer.yoo_home.function.world.recommend.DetailActivity" />
        <activity android:name="com.culturer.yoo_home.function.mine.MineActivity" />
        <activity android:name="com.culturer.yoo_home.function.world.shows.show.ShowActivity" />
